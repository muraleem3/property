%form.form-horizontal{:action => "", :method => "POST"}
  .col-md-4.col-md-offset-4
    %fieldset
      #legend
        %legend Register
        .control-group
          / Username
          %label.control-label{:for => "username"} Username
          .controls
            %input#username.input-xlarge{:name => "username", :placeholder => "", :type => "text"}
              %p.help-block Username can contain any letters or numbers, without spaces
              .control-group
      / E-mail
      %label.control-label{:for => "email"} E-mail
      .controls
        %input#email.input-xlarge{:name => "email", :placeholder => "", :type => "text"}
          %p.help-block Please provide your E-mail
          .control-group
            / Password
            %label.control-label{:for => "password"} Password
          .controls
        %input#password.input-xlarge{:name => "password", :placeholder => "", :type => "password"}
          %p.help-block Password should be at least 4 characters
    .control-group
      / Password
      %label.control-label{:for => "password_confirm"} Password (Confirm)
      .controls
        %input#password_confirm.input-xlarge{:name => "password_confirm", :placeholder => "", :type => "password"}
          %p.help-block Please confirm password
    .control-group
      / Button
      .controls
        %button.btn.btn-primary Register