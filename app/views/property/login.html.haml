.container{:style => "margin-top:30px"}
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %strong Sign in
      .panel-body
        %form{:role => "form"}
          .form-group
            %label{:for => "exampleInputEmail1"} Username or Email
            %input#exampleInputEmail1.form-control{:placeholder => "Enter email", :style => "border-radius:0px", :type => "email"}
          .form-group
            %label{:for => "exampleInputPassword1"}
              Password
              %a{:href => "/sessions/forgot_password"} (forgot password)
            %input#exampleInputPassword1.form-control{:placeholder => "Password", :style => "border-radius:0px", :type => "password"}
          %button.btn.btn-sm.btn-default{:type => "submit"} Sign in
 
