.search-box
  Location
  %select.selectpicker
    %option Hyderabad
    %option Chennai
    %option Mumbai
  %br
    %form.form-vertical
      %fieldset
        %label.radio-inline
          %input#inlineCheckbox1{:name => "types of operation", :type => "radio", :value => "buy"}/
          buy
        %label.radio-inline
          %input#inlineCheckbox2{:name => "types of operation", :type => "radio", :value => "sell"}/
          sell
        %label.radio-inline
          %input#inlineCheckbox2{:name => "types of operation", :type => "radio", :value => "rent/lease"}/
          rent/lease
        %label.radio-inline
          %input#inlineCheckbox2{:name => "types of operation", :type => "radio", :value => "pg"}/
          pg
        %label{:for => ""}
        .row
          .col-xs-2.col-md-2
            %select.form-control
              %option{:value => "features"} property features
              %option 1bhk
              %option 2bhk
              %option 3bhk
              %option 2 car oarking
              %option swiming pool
          .col-xs-2.col-md-2
            %select.form-control
              %option{:value => "locality"} locality
              %option hi-tech
              %option tarnaka
              %option kukatpally
              %option kothaguda
              %option yusfguda
              %option nanakram guda
              %option kphb
              %option ameerpet
          .col-xs-2.col-md-2
            %select.form-control
              %option{:value => "property type"} property type
              %option plots/land
              %option residentials
              %option agriculture land
              %option villas
              %option form house
      %br
        .row
          .col-xs-2.col-md-2
            %input.form-control.input-extra.small{:name => "builtup area", :placeholder => "builtup area", :type => "text", :value => ""}/
            to
          .col-xs-2.col-md-2
            %input.form-control.input-extra.small{:name => "to", :placeholder => "builtup area", :type => "text", :value => ""}/
            sqft
      %br
        .row
          .col-xs-2.col-md-2.form-group
            %input#price.form-control{:autofocus => "", :name => "min price", :placeholder => "price", :price => "min price", :required => "", :type => "price"}/
          .col-xs-2.col-md-2.form-group
            %input#price.form-control{:name => "max price", :placeholder => "price", :price => "max price", :required => "", :to => "", :type => "price"}/
      %br
        .col-xs-2.col-md-2
          %select.form-control
            %option{:value => "transaction type"} transaction type
            %option resell
            %option new
            %option both
      %br
        .col-xs-2.col-md-2.form-group
          %input#title.form-control{:placeholder => "title", :required => "", :title => "title", :to => "", :type => "title"}/
      %br
        %button.btn.btn-primary.pull-left{:type => "submit"}
          Submit

 
